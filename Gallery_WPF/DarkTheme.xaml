<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="GridStyle" TargetType="Grid">
        <Setter Property="Grid.Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#121212"/>
                    <GradientStop Color="#333333"/>

                    <GradientStop Color="#525252" Offset="0.3"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

	<Style x:Key="LabelStyle" TargetType="Label">
		<Setter Property="Label.Foreground" Value="Blue"/>
	</Style>


	<Style x:Key="MenuStyle" TargetType="Menu">
        <Setter Property="Menu.Background" Value="#FF212121"/>
        <Setter Property="Menu.Foreground" Value="#FF0054FB"/>
    </Style>

    <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
        <Setter Property="ComboBox.Background" Value="White"/>
        <Setter Property="Menu.Foreground" Value="#FF0054FB"/>
    </Style>
    <Style x:Key="SplitterStyle" TargetType="GridSplitter">
        <Setter Property="GridSplitter.Background" Value="DimGray" />
    </Style>
	
	
</ResourceDictionary>